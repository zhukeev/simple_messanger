<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_card"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:elevation="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">

        <FrameLayout
            android:layout_marginStart="10dp"
            android:id="@+id/round_holder_fl"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:background="@drawable/round_with_blue_stroke">

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:src="@drawable/celeb" />
        </FrameLayout>


        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/round_holder_fl"
            android:text="@string/recipe"
            android:textColor="@color/fab"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add_item_plus"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@color/fab"
            android:visibility="invisible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>