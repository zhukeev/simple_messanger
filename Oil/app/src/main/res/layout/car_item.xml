<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/title_tv_car_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Audi A6 IV (C7) Рестайлинг (2014-2019)"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_car_item"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_below="@id/title_tv_car_item"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/car" />

        <ImageView
            android:id="@+id/edit_car_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/oils_car_tv_car_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_car_item"
            android:text="Масло:\n
Mannol Molibden Benzin 10W-40\n
SHELL 0W-30 Professional AV-L\n
Mobil 1 ESP Formula 5W-30\n
Castrol Edge 0w30 502-505" />

        <TextView
            android:id="@+id/volumes_tv_car_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/oils_car_tv_car_item"
            android:layout_marginTop="8dp"
            android:text="Заправочные объемы:
1.8 TFSI (CYGA) — 4,5 л
2.0 TFSI (CDNB) — 4.6 л
2.0 TDI (CNHA, CZJA, CGLD)
2.0 TFSI (CDNB, CAEB, CAED,CYNB, CYPA ) — 4.6 л
2.8 FSI (CCDA) — 6,8 л
3.0 TDI — 6.4 л " />


    </RelativeLayout>

</androidx.cardview.widget.CardView>